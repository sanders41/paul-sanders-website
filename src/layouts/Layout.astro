---
interface Props {
  title: string;
}

const { title } = Astro.props;
const umamiUrl = import.meta.env.PUBLIC_UMAMI_URL;
const umamiWebsiteId = import.meta.env.PUBLIC_UMAMI_WEBSITE_ID;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content="Paul Sanders: Open Source enthusiast" />

    <link rel="icon" type="image/png" sizes="16x16" href="/icons/favicon-16x16.png" />
    <link rel="icon" type="image/png" sizes="32x32" href="/icons/favicon-32x32.png" />
    <link rel="apple-touch-icon" sizes="180x180" href="/icons/apple-touch-icon.png" />
    <link rel="manifest" href="/icons/site.webmanifest" />

    {umamiUrl && umamiWebsiteId && (
      <script
        defer
        src={`${umamiUrl}/script.js`}
        data-website-id={umamiWebsiteId}
      ></script>
    )}

    <title>{title}</title>
  </head>
  <body class="flex flex-col h-screen justify-between">
    <main class="max-w-7xl mx-auto w-full mb-auto">
      <slot />
    </main>

    <footer class="max-w-7xl mx-auto relative pt-1 px-2 border-b-2 border-gray-600 w-full">
      <div class="mt-16 border-t-2 border-gray-600 flex flex-col items-center">
        <div class="sm:w-2/3 text-center py-6">
          <p class="text-sm font-bold mb-2">
            &copy; 2021 Paul Sanders
          </p>
        </div>
      </div>
    </footer>
  </body>
</html>

<style is:global>
  @import "../styles/global.css";
</style>
